<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="800px"
        android:layout_height="834px"
        android:background="@drawable/cv_popup_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/cv_medium"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Select :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:id="@+id/line_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_first"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/who_is_your_best_friend"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_second"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/what_is_your_birth_month"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_third"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/who_is_your_favourite_cricketer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_fourth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fourth"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_fourth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/what_was_your_first_car"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_fifth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fifth"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_fifth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/which_is_your_favourite_song"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_six"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_six"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/in_what_town_was_your_first_job"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_seven"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/cv_deselect" />

                    <TextView
                        android:id="@+id/tv_seven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/which_is_your_favourite_movie"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
