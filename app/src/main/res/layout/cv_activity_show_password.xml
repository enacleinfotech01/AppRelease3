<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cv_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/_30sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/unlock_icon"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_above="@+id/unlock_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon"
            android:visibility="visible"
            app:riv_corner_radius="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cv_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/unlock_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/unlock_fail_tip"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/unlock_fail_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="@string/num_create_text_01"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_one"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/edt_two"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/edt_three"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/edt_four"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:fontFamily="@font/cv_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/num_point_1"
                        android:layout_width="100px"
                        android:layout_height="4px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/cv_enter_password_line" />

                    <ImageView
                        android:id="@+id/num_point_2"
                        android:layout_width="100px"
                        android:layout_height="4px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/cv_enter_password_line" />

                    <ImageView
                        android:id="@+id/num_point_3"
                        android:layout_width="100px"
                        android:layout_height="4px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/cv_enter_password_line" />

                    <ImageView
                        android:id="@+id/num_point_4"
                        android:layout_width="100px"
                        android:layout_height="4px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/cv_enter_password_line" />
                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:id="@+id/layout_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_1"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_one_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="1"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_2"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_two_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="2"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_3"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/cv_three_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="3"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_4"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_four_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="4"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_5"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_five_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="5"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_6"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/cv_six_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="6"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_7"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_seven_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="7"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_8"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_eight_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="8"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_9"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/cv_nine_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="9"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_none"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_zero_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="0"
                        android:textColor="@android:color/transparent"
                        android:visibility="invisible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/number_0"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/cv_zero_new_state_pressed"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:text="0"
                        android:textColor="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/number_del"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/cv_num_cycle_bg"
                        android:contentDescription="@string/app_name"
                        android:gravity="center"
                        android:onClick="cv_onNumClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cv_bacls_state_pressed" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
