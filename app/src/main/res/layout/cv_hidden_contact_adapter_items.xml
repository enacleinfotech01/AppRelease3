<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/lay_contact"
        android:layout_width="980px"
        android:layout_height="150px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="@drawable/cv_info_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cv_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Aditi"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cv_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="1234567890"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:paddingRight="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ic_edit"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/cv_editnew_state_pressed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:paddingRight="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ic_call"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/cv_call_state_pressed" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
